<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net452;netstandard2.0</TargetFrameworks>
    <AssemblyName>NServiceBus.ObjectBuilder.Autofac</AssemblyName>
    <RootNamespace>NServiceBus.ObjectBuilder.Autofac</RootNamespace>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <UpdateAssemblyInfo>true</UpdateAssemblyInfo>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>$(SolutionDir)NServiceBus.snk</AssemblyOriginatorKeyFile>
  </PropertyGroup>
  <PropertyGroup>
    <Description>Adapter for the Autofac IoC Container</Description>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>NServiceBus.Autofac</PackageId>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Autofac" Version="[4.0.0,5.0.0)" />
    <PackageReference Include="NServiceBus" Version="[7.0.0-*,8.0.0)" />
    <PackageReference Include="Particular.CodeRules" Version="0.2.0" PrivateAssets="all" />
    <PackageReference Include="Fody" Version="2.1.2" PrivateAssets="All" />
    <PackageReference Include="Janitor.Fody" Version="1.5.1" PrivateAssets="All" />
    <PackageReference Include="Obsolete.Fody" Version="4.2.4" PrivateAssets="All" />
  </ItemGroup>
  <ItemGroup>
    <None Include="..\..\GitVersion.yml" Link="GitVersion.yml" />
  </ItemGroup>
</Project>
